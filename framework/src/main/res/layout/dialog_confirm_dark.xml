<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:gravity="center"
  style="@style/match">
    <LinearLayout
      android:layout_width="392dp"
      android:layout_height="wrap_content"
      android:background="@drawable/round_gray_darkest_10dp"
      android:gravity="center"
      android:orientation="vertical"
      android:paddingTop="62dp">
        <TextView
          android:id="@+id/content"
          style="@style/wrap.white"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:textSize="24sp"
          android:layout_marginBottom="6dp"
          android:text="提示"/>

        <TextView
          android:visibility="gone"
          tools:visibility="visible"
          android:id="@+id/description"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          style="@style/wrap.white.normal"
          android:text="您确定要删除吗？"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="61dp"
          android:layout_marginTop="55dp"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:orientation="horizontal">
            <TextView
              android:id="@+id/confirm"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="@string/confirm"
              android:textColor="@color/white"
              android:background="@drawable/round_bottom_left_text_dark_10dp"
              android:textSize="18sp"/>

            <TextView
              android:id="@+id/cancel"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="@string/cancel"
              android:textColor="@color/text_light"
              android:background="@drawable/round_bottom_right_text_darker_10dp"
              android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
