<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_margin="8dp"
  android:background="@drawable/round_black80_10dp"
  style="@style/match_wrap"
  android:gravity="center"
  android:layout_height="128dp">

    <TextView style="@style/wrap.white.big"
        android:layout_width="0dp"
        android:id="@+id/name"
        android:layout_weight="3"
        android:layout_toRightOf="@id/icon"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        tools:text="文件名..."/>

    <TextView style="@style/button.blue"
      android:layout_width="140dp"
      android:background="@drawable/round_red_5dp"
      android:id="@+id/start_meeting"
      android:textSize="16sp"
      android:layout_height="56dp"
      android:layout_marginRight="36dp"
      android:gravity="center"
      android:text="@string/start_meeting"/>

</LinearLayout>