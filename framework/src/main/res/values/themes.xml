<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.PadVoting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryVariant">@color/accent</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="actionMenuTextColor">#ffffff</item>

    //沉浸状态栏
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowTranslucentStatus">true</item>

    //ActionBarDrawerToggle设置颜色
    <item name="colorControlNormal">@android:color/white</item>
  </style>

  <style name="SplashTheme" parent="AppTheme">
    <item name="android:windowBackground">@color/white</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="DefaultTheme" parent="AppTheme">
    <item name="android:windowBackground">@color/bg</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="UpdateAppNumberProgressBar">
    <item name="android:layout_height">60dp</item>
    <item name="android:layout_width">match_parent</item>

    <item name="progress_max">100</item>
    <item name="progress_current">0</item>

    <item name="progress_unreached_color">@color/text</item>
    <item name="progress_reached_color">@color/text_lightest</item>

    <item name="progress_text_size">20sp</item>
    <item name="progress_text_color">@color/text_lightest</item>

    <item name="progress_reached_bar_height">20dp</item>
    <item name="progress_unreached_bar_height">20dp</item>
  </style>

  <style name="UpdateAppDialog" parent="android:style/Theme.Dialog">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowCloseOnTouchOutside">false</item>
  </style>


  <style name="no_width_height">
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_width">0dp</item>
  </style>

  <style name="wrap">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>

  <style name="match">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="match_wrap">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="match_width">
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="match_height">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="match_wrap.text">
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="match_wrap.text_darker">
    <item name="android:textColor">@color/text_darker</item>
  </style>

  <style name="match_wrap.text_darker.normal">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="wrap.text.normal">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="wrap.text_light.normal">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="wrap.white.normal">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="match_wrap.white.normal">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="wrap.text_light.small">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="match_wrap.text_darker.small">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="match_wrap.text_darker.big">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="wrap.white.big">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="wrap.text_dark.big">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="match_wrap.white">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="wrap.white">
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="wrap.blue">
    <item name="android:textColor">@color/blue</item>
  </style>

  <style name="wrap.text_light">
    <item name="android:textColor">@color/text_light</item>
  </style>

  <style name="wrap.text_lightest">
    <item name="android:textColor">@color/text_lightest</item>
  </style>

  <style name="wrap.text">
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="wrap.text_darker">
    <item name="android:textColor">@color/text_darker</item>
  </style>

  <style name="wrap.text_dark">
    <item name="android:textColor">@color/text_dark</item>
  </style>



  <style name="wrap.text_light.bottom">
    <item name="android:layout_alignParentBottom">true</item>
  </style>

  <style name="wrap.text_light.bottom.center">
    <item name="android:layout_centerHorizontal">true</item>
  </style>

  <style name="wrap.bottom">
    <item name="android:layout_alignParentBottom">true</item>
  </style>

  <style name="wrap.bottom.center">
    <item name="android:layout_centerHorizontal">true</item>
  </style>

  <style name="button" parent="wrap">
    <item name="android:textSize">16sp</item>
    <item name="android:paddingTop">11dp</item>
    <item name="android:paddingBottom">11dp</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
  </style>

  <style name="button.blue">
    <item name="android:background">@drawable/round_blue</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="button.red">
    <item name="android:background">@drawable/circle_red_light_pink_light</item>
    <item name="android:textColor">@color/red_light</item>
  </style>


  <style name="v_line">
    <item name="android:layout_width">1dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>
  <style name="v_line.white20">
    <item name="android:background">@color/white20</item>
  </style>

  <style name="h_line">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/line_gray</item>
  </style>



  <style name="FullDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <!--是否悬浮在activity上-->
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">true</item>
    <!--透明是否-->
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:background">@null</item>
    <!--设置没有窗口标题、dialog标题等各种标题-->
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:title">@null</item>
    <item name="windowNoTitle">true</item>
    <item name="android:dialogTitle">@null</item>
  </style>


  <style name="SwitchButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="switchTextExtra">32dp</item>
    <item name="switchThumbWidth">28dp</item>
    <item name="switchThumbHeight">28dp</item>
    <item name="switchThumbColor">@color/white</item>
    <item name="switchBackDrawable">@drawable/switch_bg</item>
  </style>

</resources>